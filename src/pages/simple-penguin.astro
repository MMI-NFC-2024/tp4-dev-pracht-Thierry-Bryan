---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1 class="text-2xl font-bold mb-4 p-4">Graphique simple</h1>
  <div id="myplot" class="p-4"></div>

  <script>
    import * as Plot from "@observablehq/plot";
    import penguins from "../assets/penguins.json";

    const plot = Plot.plot({
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    });
    const div = document.querySelector("#myplot");
    div.append(plot);
  </script>

  <div class="mt-4 p-4">
    <a href="/" class="hover:underline">← Retour à l'accueil</a>
  </div>
</Layout>
